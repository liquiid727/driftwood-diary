page {
  background: #fff6e8;
  color: #1f1a17;
  font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "PingFang SC", "Hiragino Sans GB", "Microsoft YaHei", sans-serif;
}

.container {
  padding: 32rpx;
}

.btn-primary {
  background: #c81e1e;
  color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  line-height: 1;
}

.btn-secondary {
  background: rgba(255, 255, 255, 0.9);
  color: #1f1a17;
  border: 2rpx solid rgba(245, 197, 66, 0.55);
  border-radius: 16rpx;
  padding: 24rpx 28rpx;
  font-size: 30rpx;
  line-height: 1;
}
