.hero {
  margin-top: 16rpx;
  margin-bottom: 28rpx;
}

.hero-title {
  font-size: 48rpx;
  line-height: 1.15;
  font-weight: 700;
  letter-spacing: 1rpx;
}

.hero-subtitle {
  margin-top: 12rpx;
  font-size: 28rpx;
  line-height: 1.4;
  color: rgba(31, 26, 23, 0.72);
}

.grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12rpx;
  margin-top: 24rpx;
}

.tile {
  background: rgba(255, 255, 255, 0.65);
  border: 2rpx solid rgba(245, 197, 66, 0.22);
  border-radius: 14rpx;
  overflow: hidden;
  height: 210rpx;
}

.tile-img {
  width: 100%;
  height: 210rpx;
}

.actions {
  margin-top: 28rpx;
}
